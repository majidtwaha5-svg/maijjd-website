{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "variables": {
    "NODE_ENV": "production",
    "PORT": "5001",
    "MONGODB_URI": "mongodb://localhost:27017/maijjd",
    "JWT_SECRET": "temporary-jwt-secret-change-in-production",
    "JWT_EXPIRES_IN": "24h",
    "SMTP_HOST": "smtp.gmail.com",
    "SMTP_PORT": "587",
    "SMTP_USER": "your_email@gmail.com",
    "SMTP_PASS": "your_app_password_here",
    "FROM_EMAIL": "noreply@maijjd.com",
    "TWILIO_ACCOUNT_SID": "your_twilio_account_sid_here",
    "TWILIO_AUTH_TOKEN": "your_twilio_auth_token_here",
    "TWILIO_PHONE_NUMBER": "+18723122293",
    "TWILIO_ENABLED": "false",
    "BCRYPT_ROUNDS": "12",
    "RATE_LIMIT_WINDOW_MS": "900000",
    "RATE_LIMIT_MAX_REQUESTS": "100",
    "LOG_LEVEL": "info",
    "LOG_FILE": "logs/maijjd.log",
    "CORS_ORIGIN": "http://localhost:3000,http://127.0.0.1:3000",
    "FRONTEND_URL": "http://localhost:3000",
    "ALLOWED_ORIGINS": "http://localhost:3000,http://127.0.0.1:3000",
    "HELMET_ENABLED": "true",
    "RATE_LIMIT_ENABLED": "true",
    "INPUT_SANITIZATION": "true",
    "MAX_FILE_SIZE": "10485760",
    "UPLOAD_PATH": "uploads/"
  },
  "comment": "Railway deployment configuration for Maijjd backend - clean deployment"
}
