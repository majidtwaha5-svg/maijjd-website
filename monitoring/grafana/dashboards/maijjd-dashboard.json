{
  "dashboard": {
    "id": null,
    "title": "Maijjd Application Dashboard",
    "tags": ["maijjd", "application", "monitoring"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Application Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"maijjd-backend\"}",
            "legendFormat": "Backend Status"
          },
          {
            "expr": "up{job=\"maijjd-frontend\"}",
            "legendFormat": "Frontend Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th Percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "50th Percentile"
          }
        ],
        "yAxes": [
          {
            "label": "Response Time (seconds)",
            "unit": "s"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "Requests/sec"
          }
        ],
        "yAxes": [
          {
            "label": "Requests per Second",
            "unit": "reqps"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"4..|5..\"}[5m])",
            "legendFormat": "Errors/sec"
          }
        ],
        "yAxes": [
          {
            "label": "Errors per Second",
            "unit": "reqps"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=\"maijjd-backend\"} / 1024 / 1024",
            "legendFormat": "Backend Memory (MB)"
          },
          {
            "expr": "process_resident_memory_bytes{job=\"maijjd-frontend\"} / 1024 / 1024",
            "legendFormat": "Frontend Memory (MB)"
          }
        ],
        "yAxes": [
          {
            "label": "Memory Usage (MB)",
            "unit": "bytes"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{job=\"maijjd-backend\"}[5m]) * 100",
            "legendFormat": "Backend CPU %"
          },
          {
            "expr": "rate(process_cpu_seconds_total{job=\"maijjd-frontend\"}[5m]) * 100",
            "legendFormat": "Frontend CPU %"
          }
        ],
        "yAxes": [
          {
            "label": "CPU Usage (%)",
            "unit": "percent"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
